{
  "name": "rhymix/mcpserver",
  "description": "MCP (Model Context Protocol) Server module for Rhymix CMS",
  "type": "rhymix-module",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Waterticket",
      "email": "waterticket@potatosoft.kr",
      "homepage": "https://potatosoft.kr"
    }
  ],
  "require": {
    "php": ">=8.1",
    "rhymix/composer-stub": "dev-master",
    "php-mcp/server": "^3.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "phpcompatibility/php-compatibility": "^9.3"
  },
  "config": {
    "optimize-autoloader": true,
    "prepend-autoloader": false,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "lint": "find . -name '*.php' -not -path './vendor/*' -print0 | xargs -0 -n1 php -l",
    "compat-check": "phpcs --standard=PHPCompatibility --runtime-set testVersion 8.1-8.4 --extensions=php --ignore=vendor/ ."
  }
}
